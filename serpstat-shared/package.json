{
  "name": "serpstat-shared",
  "version": "1.0.0",
  "description": "Shared library for Serpstat MCP servers providing common types, API client, and validation utilities",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build:ts": "tsc && node -e \"require('fs').chmodSync('dist/index.js', '755')\"",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "serpstat",
    "mcp",
    "shared-library",
    "api-client",
    "validation",
    "typescript"
  ],
  "author": "Serpstat MCP Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/serpstat/serpstat-mcp.git",
    "directory": "serpstat-shared"
  },
  "bugs": {
    "url": "https://github.com/serpstat/serpstat-mcp/issues"
  },
  "homepage": "https://github.com/serpstat/serpstat-mcp#readme"
}